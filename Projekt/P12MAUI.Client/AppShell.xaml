<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="P12MAUI.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:P12MAUI.Client"
    Shell.FlyoutBehavior="Flyout"
    FlyoutHeaderBehavior="CollapseOnScroll">

    <Shell.FlyoutHeader>
        <!-- Header of the Flyout (optional) -->
        <Label Text="User Settings" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
    </Shell.FlyoutHeader>

    <ShellItem Title="Main">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </ShellItem>

    <!-- Add a new ShellItem for User Settings -->
    <ShellItem Title="User Settings">
        <ShellContent>
            <!-- Your user settings page goes here -->
            <local:UserSettingsPage />
        </ShellContent>
    </ShellItem>

</Shell>
